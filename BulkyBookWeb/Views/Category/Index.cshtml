@model IEnumerable<Category>;

@{
    ViewData["Title"] = "Index";
}


<partial name="_Notifications" />    
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6" style="text-align:right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-plus"></i>&nbsp;Create
            </a>
        </div>
    </div>
</div>

<br />
<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td width="50%">@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>@category.CreatedDateTime</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-up-right"></i>
                        &nbsp;Edit
                    </a>
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">
                        <i class="bi bi-box-arrow-in-up-right"></i>
                        &nbsp;Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>